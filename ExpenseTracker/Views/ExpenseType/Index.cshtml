@model IEnumerable<ExpenseTracker.Models.ExpenseType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary">
                Create New Expense Type
            </a>
        </div>
    </div>
    </br>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>

        <th>
           Expense Name
        </th>
      
        <th>
            Changes
        </th>
       
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="35%">@item.Name</td>
                  
                    <td width="40%">
                        <a asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@item.Id"  class="btn btn-primary mx-1">
                           Update
                        </a>
                        <a asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">
                            Delete
                        </a>
                    </td>
                 
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts
                    {
    <partial name="_ValidationScriptsPartial" />
}