@model IEnumerable<ExpenseTracker.Models.Expense>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">
                Create New Item
            </a>
        </div>
    </div>
    </br>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>

        <th>
           Expense Name
        </th>
        <th>
           Amount
        </th>
        <th>
          Expense Type
        </th>
        <thead>
            Changes
        </thead>
       
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="25%">@item.ExpenseName</td>
                    <td width="25%">@item.Amount</td>
                    <td width="25%">@item.Expensetype.Name</td>
                    <td width="25%">
                        <a asp-controller="Expense" asp-action="Update" asp-route-Id="@item.Id"  class="btn btn-primary mx-1">
                           Update
                        </a>
                        <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">
                            Delete
                        </a>
                    </td>
                 
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts
                    {
    <partial name="_ValidationScriptsPartial" />
}