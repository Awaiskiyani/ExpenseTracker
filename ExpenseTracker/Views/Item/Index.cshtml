@model IEnumerable<ExpenseTracker.Models.Item>;



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Item List</h2>
        </div>
        <div class="col-6 text-right"> 
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary"> 
                Create New Item
            </a>
        </div>
    </div>
    </br>
 </div>

 @if (Model.Count()>0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
           
            <th>
                Item Name
            </th>
            <th>
                Lender
            </th>
            <th>
               Borrower
            </th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="30%">@item.ItemName</td>
                    <td width="30%">@item.Borrower</td>
                    <td width="30%">@item.Lender</td>
                </tr>
            }
        </tbody>
    </table>
}


